<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/item_padding">

    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text="2015-10-18" />

    <TextView
        android:id="@+id/order_complete_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:text="已完成" />

    <View
        android:id="@+id/trade_divide1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/order_date"
        android:layout_marginTop="2dp"
        android:background="@color/lightgray" />

    <ImageView
        android:id="@+id/item_img1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/trade_divide1"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_poll_black_48dp" />

    <ImageView
        android:id="@+id/item_img2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/trade_divide1"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/item_img1"
        android:src="@drawable/ic_poll_black_48dp" />

    <ImageView
        android:id="@+id/item_img3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/trade_divide1"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/item_img2"
        android:src="@drawable/ic_poll_black_48dp" />


    <TextView
        android:id="@+id/order_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trade_divide1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:text="12个商品" />

    <View
        android:id="@+id/trade_divide2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/item_img1"
        android:layout_marginTop="2dp"
        android:background="@color/lightgray" />


    <TextView
        android:id="@+id/total_fee"
        style="@style/ProductPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trade_divide2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="￥1356" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trade_divide2"
        android:layout_marginRight="2dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/total_fee"
        android:text="合计：" />

</RelativeLayout>